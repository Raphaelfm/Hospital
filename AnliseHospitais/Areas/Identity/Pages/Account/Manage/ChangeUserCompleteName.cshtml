@page "{returnUrl?}"
@using AnliseHospitais.Models;
@model ChangeUserCompleteNameModel
@{
    ViewData["Title"] = "Change Name";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="UserCompleteName" class="control-label"></label>
                <input asp-for="UserCompleteName" class="form-control" />
                <span asp-validation-for="UserCompleteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Name</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
            <input type="hidden" asp-for="ReturnUrl" />
        </form>
    </div>
</div>
